 <div class="site-bg">
        <div class="site-bg__curve"></div>
    </div>
    <main class="edit-book">
        <div class="edit-book__title">
            <h2>CHỈNH SỬA THÔNG TIN SÁCH</h2>
        </div>
        <div class="edit-book__form">
            <form action="/stockkeeper/book/edit/{{this.masach}}" method="post" class="container">
                <div class="row">
                    <div class="col-12 col-lg-4">
                        <div class="form-group">
                            <label for="fullname">Tên sách:</label>
                            <input type="text" class="form-control" value="{{book.tensach}}" name="fullname" id="fullname" autocomplete="false" >
                        </div>
                        <div class="form-group">
                            <label for="author">Tác giả:</label>
                            <input type="text" class="form-control" value="{{book.tacgia}}" name="author" id="author" autocomplete="false" >
                        </div>
                        <div class="form-group">
                            <label for="year">Năm xuất bản:</label>
                            <input type="text" class="form-control" value="{{book.namxuatban}}" name="year" id="year" autocomplete="false" >
                        </div>
                        <div class="form-group">
                            <label for="price">Trị giá:</label>
                            <input type="text" class="form-control" value="{{book.trigia}}" name="price" id="price" autocomplete="false" >
                        </div>
                       
                    </div>
                    <div class="col-12 col-lg-4">
                        <div class="form-group">
                            <label for="user-type">Thể loại</label>
                            <select name="userType" id="user-type" class="form-control">
                                <option value="{{book.theloai}}" selected>{{book.theloai}}</option>
                                <option value="A" >A</option>
                                <option value="B" >B</option>
                                <option value="C" >C</option>
                                
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="nxb">Nhà xuất bản:</label>
                            <input type="text" class="form-control" value="{{book.nhaxuatban}}" name="nxb" id="nxb" autocomplete="false" >
                        </div>
                        <div class="form-group">
                            <label for="create-at">Ngày nhập:</label>
                            <input type="date" class="form-control" value="{{book.ngaynhap}}" readonly name="createAt" id="create-at" autocomplete="false" >
                        </div>
                        <div class="form-group">
                            <label for="admin">Người tiếp nhận:</label>
                            <input type="text" readonly class="form-control" value="{{book.nguoitiepnhan}}" name="admin" id="admin" autocomplete="false" >
                        </div>

                    </div>
                    <div class="col-12 col-lg-4 order-first order-lg-last">
                        <h5>Mã sách: {{book.masach}}</h5>
                        <img id="user-avatar" src="{{book.anhbia}}" alt="">
                        <div class="custom-file">
                            <button type="button" id="change-image-btn" class="btn mx-auto mb-3 mx-sm-0 mb-sm-0">Thay đổi ảnh</button>
                            <input type="file" accept="image/png" class="custom-file-input" id="change-file">
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12 col-sm-4">
                        <button type="submit" class="btn mx-auto mb-3 mx-sm-0 mb-sm-0">Lưu thông tin</button>
                    </div>
                    <div class="col-12 col-sm-4">
                        <button type="button" class="btn mx-auto mb-3 mx-sm-0 mb-sm-0">In thông tin</button>
                    </div>
                </div>
            </form>
        </div>
    </main>
    
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.min.js" integrity="sha384-VHvPCCyXqtD5DqJeNxl2dtTyhF78xXNXdkwX1CZeRusQfRKp+tA7hAShOK/B/fQ2" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function(){
            const changeImageBtn = document.getElementById("change-image-btn");
            const changeFile = document.getElementById("change-file");
            changeImageBtn.addEventListener("click", (e)=>{
                changeFile.click();
            });

            function readURL(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $('#user-avatar').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }

            $("#change-file").change(function(){
                readURL(this);
            });
        })
    </script>