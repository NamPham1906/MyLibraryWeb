<div class="site-bg">
        <div class="site-bg__curve"></div>
    </div>
    <button class="btn btn__add"><a href="/stockkeeper/book/add">Thêm sách</a></button>
    <main class="all-book text-center text-sm-left d-flex justify-content-center flex-column">
        <div class="all-book__title">
            <h2>DANH SÁCH SÁCH</h2>
        </div>
        <div class="all-book__search">
            <form action="" class="container">
                <div class="row">
                    <div class="col-12 col-md-5 mb-3 mb-md-0">
                        <div class="form-group row">
                            <label for="user-id" class="col-12 col-sm-4 col-form-label">Mã sách: </label>
                            <div class="col-12 col-sm-8 input-wrapper">
                                <div class="input-wrapper">
                                    <input type="text" id="user-id" name="userId" class="form-control">
                                    <button type="submit">
                                        <img src="/images/librarian/search.png" alt="">
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-5 mb-3 mb-md-0">
                        <div class="form-group row">
                            <label for="fullname" class="col-12 col-sm-4 col-form-label">Tên tác giả: </label>
                            <div class="col-12 col-sm-8">
                                <div class="input-wrapper">
                                    <input type="text" id="fullname" name="fullname" class="form-control">
                                    <button type="submit">
                                        <img src="/images/librarian/search.png" alt="">
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-2 mb-3 mb-md-0">
                        <div class="d-flex align-items-center" style="cursor: pointer;" data-toggle="modal" data-target="#advancedFilterModal">
                            <span>Tìm kiếm nâng cao</span>
                            <button type="button">
                                <img src="/images/librarian/filter.png" alt="">
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="all-book__container">
             {{#each books}}
                <div class="user-card">
                    <div class="container-fluid ">
                        <div class="row">
                            <div class="col-12 col-md-5">
                                <div class="row">
                                    <div class="col-12 col-sm-4">
                                        <div class="user-card__bookimg mx-auto mx-sm-0">
                                            <img  src="/images/stocker/csdl-book.png" alt="">
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-7">
                                        <div class="user-card__info">
                                            <p>Mã sách: {{this.masach}}</p>
                                            <p>Tên sách: {{this.tensach}}</p>
                                            <p>Tác giả:{{this.tacgia}}</p>
                                            <p>Thể loại: {{this.theloai}}</p>
                                            <p>Năm xuất bản: {{this.namxuatban}}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-7">
                                <div class="row h-100">
                                    <div class="col-12 col-sm-7">
                                        <div class="user-card__info">
                                            <p>Nhà xuất bản: {{this.nhaxuatban}} </p>
                                            <p>Người tiếp nhận: {{this.nguoitiepnhan}}</p>
                                            <p>Ngày nhập: {{this.ngaynhap}}</p>
                                            <p>Trị giá: {{this.trigia}}</p>
                                            <p>Tình trạng: Còn sách</p>

                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-5">
                                        <div class="d-flex flex-column justify-content-between user-card__action">
                                            <a href="/stockkeeper/book/edit/{{this.masach}}">
                                                <div class="d-flex align-items-center justify-content-center justify-content-sm-start mb-3 mb-sm-0">
                                                    <img src="/images/librarian/edit-user.png" alt="">
                                                    <span class="span1">Chỉnh sửa</span>
                                                </div>
                                            </a>
                                            <div class="d-flex align-items-center justify-content-center justify-content-sm-start mb-3 mb-sm-0">
                                                <img src="/images/librarian/delete-user.png" alt="">
                                                <span class="span2">Xóa</span>
                                            </div>
                                            <div class="d-flex align-items-center justify-content-center justify-content-sm-start mb-3 mb-sm-0">
                                                <img src="/images/librarian/print-user.png" alt="">
                                                <span class="span3">In thông tin sách</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
        {{#if paginationArray}}
            <form action="/stockkeeper/book" method="get">
                <div class="pagination">
                    <div class="pagination__item pagination__item--prev">
                        <input onchange='this.form.submit();' style="display: none;" id="page-prev" value="{{prevPage}}" type="radio" name="page"/>
                        <label for="page-prev"  class="my-page-button"><i class="fas fa-angle-left"></i></label>
                    </div>
                     {{#each paginationArray }}  
                        {{#if this.isCurrent}}
                            <div class="pagination__item current">
                                <input onchange='this.form.submit();' style="display: none;" id="page-{{this.page}}" value="{{this.page}}" type="radio" name="page"/>
                                <label for="page-{{this.page}}"  class="my-page-link my-current-page">{{this.page}}</label>
                            </div>
                        {{else}}
                            <div class="pagination__item">
                                <input onchange='this.form.submit();' style="display: none;" id="page-{{this.page}}" value="{{this.page}}" type="radio" name="page"/>
                                <label for="page-{{this.page}}"  class="my-page-link">{{this.page}}</label>
                            </div>
                        {{/if}}
                    {{/each}}
                    <div class="pagination__item pagination__item--next">
                        <input onchange='this.form.submit();' style="display: none;" id="page-next" value="{{nextPage}}" type="radio" name="page"/>
                        <label for="page-next"  class="my-page-button"><i class="fas fa-angle-right"></i></label>
                    </div>
                </div>
            </form>
        {{/if}}
    </main>
    <div class="modal fade book-advance-filter" id="advancedFilterModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-body">
                    <h4>Bộ lọc</h4>
                    <form id="advancedFilterForm" class="container">
                        <div class="row">
                            <div class="col-12 col-xl-6">
                                <div class="form-group row">
                                    <label for="modal-user-id" class="col-12 col-md-4 col-form-label">Mã sách: </label>
                                    <div class="col-12 col-md-8 input-wrapper">
                                        <input type="text" id="modal-user-id" name="modalUserId" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="modal-user-email" class="col-12 col-md-4 col-form-label">Tên sách: </label>
                                    <div class="col-12 col-md-8 input-wrapper">
                                        <input type="email" id="modal-user-email" name="modalUserEmail" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="modal-user-type" class="col-12 col-md-4 col-form-label">Thể loại:</label>
                                    <div class="col-12 col-md-8 input-wrapper">
                                        <select name="modalUserType" class="form-control" id="modal-user-type">
                                            <option value="1">A</option>
                                            <option value="2">B</option>
                                            <option value="2">C</option>
                                        </select>
                                    </div>
                                </div>
                                
                                <div class="form-group row">
                                    <label for="modal-user-fullname" class="col-12 col-md-4 col-form-label">Nhà xuất bản: </label>
                                    <div class="col-12 col-md-8 input-wrapper">
                                        <input type="text" id="modal-user-fullname" name="modalFullname" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="modal-user-admin" class="col-12 col-md-4 col-form-label">Năm xuất bản: </label>
                                    <div class="col-12 col-md-8 input-wrapper">
                                        <input type="text" id="modal-user-admin" name="modalUserAdmin" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-xl-6">
                                <div class="form-group row">
                                    <label for="modal-user-fullname" class="col-12 col-md-4 col-form-label">Tên tác giả: </label>
                                    <div class="col-12 col-md-8 input-wrapper">
                                        <input type="text" id="modal-user-fullname" name="modalFullname" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="modal-user-admin" class="col-12 col-md-4 col-form-label">Người tiếp nhận: </label>
                                    <div class="col-12 col-md-8 input-wrapper">
                                        <input type="text" id="modal-user-admin" name="modalUserAdmin" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="modal-user-created-dob" class="col-12 col-md-4 col-form-label">Ngày nhập: </label>
                                    <div class="col-12 col-md-8 input-wrapper">
                                        <input type="date" id="modal-user-dob" name="modalUserDob" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="modal-user-address" class="col-12 col-md-4 col-form-label">Tình trạng: </label>
                                    <div class="col-12 col-md-8 input-wrapper">
                                        <input type="text" id="modal-user-address" name="modalUserAddress" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <button type="submit" form="advancedFilterForm" class="btn btn-primary">Tìm kiếm</button>
            </div>
        </div>
    </div>