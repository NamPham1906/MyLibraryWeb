    <div class="site-bg">
        <div class="site-bg__curve"></div>
    </div>
    <main class="edit-staff">
        <div class="edit-staff__title">
            <h2>Hồ sơ nhân viên</h2>
        </div>
        {{#with staff}}
            <div class="edit-staff__form">
                <form action="" class="container">
                    <div class="row">
                        <div class="col-12 col-lg-4">
                            <div class="form-group">
                                <label for="fullname">Họ tên:</label>
                                <input type="text" class="form-control" name="fullname" id="fullname" autocomplete="false" value="{{hoten}}" >
                            </div>
                            <div class="form-group">
                                <label for="address">Điện thoại:</label>
                                <input type="number" class="form-control" name="phone" id="phone" autocomplete="false" value="{{dienthoai}}">
                            </div>
                            <div class="form-group">
                                <label for="address">Địa chỉ:</label>
                                <input type="text" class="form-control" name="address" id="address" autocomplete="false" value="{{diachi}}">
                            </div>
                            <div class="form-group">
                                <label for="department">Bộ phận</label>
                                <select name="department" class="form-control" id="department">
                                    <option value="{{bophan}}" selected="">{{bophan}}</option>
                                    <option value="Thủ Thư">Thủ Thư</option>
                                    <option value="Thủ Kho">Thủ Kho</option>
                                    <option value="Thủ Quỹ">Thủ Quỹ</option>
                                    <option value="Ban Giám Đốc">Ban Giám Đốc</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-12 col-lg-4">
                            <div class="form-group">
                                <label for="position">Chức vụ</label>
                                <select name="position" class="form-control" id="position">
                                    <option value="{{chucvu}}" selected="">{{chucvu}}</option>
                                    <option value="Nhân Viên">Nhân Viên</option>
                                    <option value="Phó Phòng">Phó Phòng</option>
                                    <option value="Trưởng Phòng">Trưởng Phòng</option>
                                    <option value="Phó Giám Đốc">Phó Giám Đốc</option>
                                    <option value="Giám Đốc">Giám Đốc</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="certificate">Bằng cấp</label>
                                <select name="certificate" class="form-control" id="certificate">
                                    <option value="{{bangcap}}" selected="">{{bangcap}}</option>
                                    <option value="Tú Tài">Tú Tài</option>
                                    <option value="Trung Cấp">Trung Cấp</option>
                                    <option value="Cao Đẳng">Cao Đẳng</option>
                                    <option value="Đại Học">Đại Học</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="dob">Ngày sinh</label>
                                <input type="date" class="form-control" name="dob" id="dob" autocomplete="false" value="{{ngaysinh}}">
                            </div>
                            <div class="form-group">
                                <label for="username">Tài khoản:</label>
                                <input type="text" class="form-control" name="username" id="username" autocomplete="false" value="{{username}}">
                            </div>
                            <!-- <div class="form-group">
                                <label for="password">Mật khẩu:</label>
                                <input type="password" class="form-control" name="password" id="password" autocomplete="false" value="tt_tmtuyet">
                            </div> -->
                        </div>
                        <div class="col-12 col-lg-4 order-first order-lg-last">
                            <h5>Mã nhân viên: {{manv}}</h5>
                            <img class="staff-avatar" id="user-avatar" src="{{anhdaidien}}" alt="" style="margin-bottom: 15px;">
                            <div class="custom-file">
                                <button type="button" id="change-image-btn" class="btn mx-auto mb-3 mx-sm-0 mb-sm-0">Thay đổi ảnh</button>
                                <input type="file" accept="image/png" class="custom-file-input" id="change-file">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-sm-6">
                            <button type="submit" class="btn mx-auto mb-3 mx-sm-0 mb-sm-0">Cập nhật</button>
                        </div>
                        <div class="col-12 col-sm-6">
                            <button type="button" class="btn mx-auto mb-3 mx-sm-0 mb-sm-0">In hồ sơ</button>
                        </div>
                    </div>
                </form>
            </div>
        {{/with}}
    </main>
    <script>
        $(document).ready(function(){
            const changeImageBtn = document.getElementById("change-image-btn");
            const changeFile = document.getElementById("change-file");
            changeImageBtn.addEventListener("click", (e)=>{

                changeFile.click();
            });

            function readURL(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $('#user-avatar').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }

            $("#change-file").change(function(){
                readURL(this);
            });
        })
    </script>