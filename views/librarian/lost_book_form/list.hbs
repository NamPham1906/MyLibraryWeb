 <div class="site-bg">
        <div class="site-bg__curve"></div>
    </div>
    <main class="list-book-borrow">
        <div class="list-book-borrow__title">
            <h2>Danh sách phiếu ghi nhận mất sách</h2>
        </div>
        <form class="list-book-borrow__search">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="form-group row">                            
                            <label for="form-id" class="col-12 col-sm-4 col-form-label">Mã phiếu: </label>
                            <div class="col-12 col-sm-8 input-wrapper">
                                <div class="input-wrapper">
                                    <input type="text" id="form-id" name="formId" class="form-control">
                                    <button type="submit">
                                        <img src="/images/librarian/search.png" alt="">
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group row">      
                            <label for="user" class="col-12 col-sm-4 col-form-label">Mã/Tên độc giả: </label>
                            <div class="col-12 col-sm-8 input-wrapper">
                                <div class="input-wrapper">
                                    <input type="text" id="user" name="user" class="form-control">
                                    <button type="submit">
                                        <img src="/images/librarian/search.png" alt="">
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="form-group row">                            
                            <label for="create-at" class="col-12 col-sm-4 col-form-label">Ngày ghi nhận: </label>
                            <div class="col-12 col-sm-8 input-wrapper">
                                <div class="input-wrapper">
                                    <input type="date" id="create-at" name="createAt" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group row">      
                            <label for="book" class="col-12 col-sm-4 col-form-label">Tên sách: </label>
                            <div class="col-12 col-sm-8 input-wrapper">
                                <div class="input-wrapper">
                                    <input type="text" id="book" name="book" class="form-control">
                                    <button type="submit">
                                        <img src="/images/librarian/search.png" alt="">
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="form-group row">                            
                            <label for="money" class="col-12 col-sm-4 col-form-label">Tiền phạt: </label>
                            <div class="col-12 col-sm-8 input-wrapper">
                                <div class="input-wrapper">
                                    <input type="text" id="money" name="money" class="form-control">
                                    <button type="submit">
                                        <img src="/images/librarian/search.png" alt="">
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <div class="table-responsive">
            <table class="table table-borderless" style="border-collapse: unset;">
                <thead>
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Mã phiếu</th>
                        <th scope="col">Mã độc giả</th>
                        <th scope="col">Tên độc giả</th>
                        <th scope="col">Tên sách</th>
                        <th scope="col">Ngày ghi nhận</th>
                        <th scope="col">Tiền phạt</th>
                        </tr>
                </thead>
                <tbody>
                    {{#each forms}}
                        <tr class="book-borrow-item">
                            <td>{{this.stt}}</td>
                            <td>
                                <span>{{this.maphieumatsach}}</span>
                            </td>
                            <td>
                                <span>{{this.madocgia}}</span>
                            </td>
                            <td>
                                <span>{{this.readername}}</span>
                            </td>
                            <td>
                                <span>{{this.lostbook}}</span>
                            </td>
                            <td>
                                <span>{{this.ngayghi}}</span>
                            </td>
                            <td style="display: none;">
                                <a href="/librarian/lost-book-form/detail/{{this.maphieumatsach}}"></a>
                            </td>
                            <td>
                                <span>{{this.tienphat}} vnđ</span>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </main>
    <div class="d-flex flex-row justify-content-between w-100 mb-4" style="max-width: 90vw; z-index: 1">
        <div style="width: 150px;"></div>
        <form method="GET" action="/librarian/lost-book-form">
                {{#if paginationArray}}
                    <div class="pagination">
                        <div class="pagination__item--prev">
                            <input onchange='this.form.submit();' style="display: none;" id="page-prev" value="{{prevPage}}" type="radio" name="page"/>
                            <label for="page-prev" class="pagination__item"><i class="fas fa-angle-left"></i></label>
                        </div>
                        {{#each paginationArray}}  
                            {{#if this.isCurrent}}
                                <div>
                                    <input onchange='this.form.submit();' style="display: none;" id="page-{{this.page}}" value="{{this.page}}" type="radio" name="page"/>
                                    <label for="page-{{this.page}}" class="pagination__item current">{{this.page}}</label>
                                </div>
                            {{else}}
                                <div>
                                    <input onchange='this.form.submit();' style="display: none;" id="page-{{this.page}}" value="{{this.page}}" type="radio" name="page"/>
                                    <label for="page-{{this.page}}" class="pagination__item">{{this.page}}</label>
                                </div>
                            {{/if}}
                        {{/each}}
                        <div class="pagination__item--next">
                            <input onchange='this.form.submit();' style="display: none;" id="page-next" value="{{nextPage}}" type="radio" name="page"/>
                            <label for="page-next" class="pagination__item"><i class="fas fa-angle-right"></i></label>
                        </div>
                    </div>
                {{/if}}
            </form>
        <a href="/librarian/lost-book-form/add">
        <button class="btn btn-add-book-return">
            Thêm
        </button>
        </a>
    </div>
    <script>
        $(document).ready(function(){
            const item = document.getElementsByClassName("book-borrow-item");
            const n = item.length;
            for(let i = 0; i < n; i++){
                item[i].onclick=function(e){
                    item[i].getElementsByTagName("a")[0].click();
                }
            }
        })
    </script>