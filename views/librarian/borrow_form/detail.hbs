
    <div class="site-bg">
        <div class="site-bg__curve"></div>
    </div>
    {{#with form}}
        <main class="detail-book-borrow">
            <div class="detail-book-borrow__id">
                <h5>Mã phiếu: {{maphieumuon}}</h5>
            </div>
            <div class="detail-book-borrow__title">
                <h2>Phiếu mượn sách</h2>
            </div>
            <div class="detail-book-borrow__content">
                <div class="container">
                    <div class="row">
                        <div class="col-12 col-lg-4">
                            <div class="form-group">
                                <label>Họ tên:</label>
                                <input type="text" readonly class="form-control" value="{{readername}}" autocomplete="false" >
                            </div>
                        </div>
                        <div class="col-12 col-lg-4">
                            <div class="form-group">
                                <label>Mã độc giả:</label>
                                <input type="text" readonly class="form-control" value="{{madocgia}}" autocomplete="false" >
                            </div>
                        </div>
                        <div class="col-12 col-lg-4">
                            <div class="form-group">
                                <label>Ngày mượn:</label>
                                <input type="text" readonly class="form-control" value="{{ngayghi}}" autocomplete="false"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="create-book-borrow__title create-book-borrow__title--sub">
                    <h2>Danh sách sách mượn</h2>
                </div>
                <div class="detail-book-borrow__book-list">
                    <form id="return-book-form">
                        {{#each ../bookList}}
                            <div class="book-card">
                                <div class="container-fluid ">
                                    <div class="row">
                                        <div class="col-12 col-md-6">
                                            <div class="row">
                                                <div class="col-12 col-sm-4 p-0">
                                                    <div class="book-card__avatar mx-auto mx-sm-0">
                                                        <img  src="{{anhbia}}" alt="">
                                                    </div>
                                                </div>
                                                <div class="col-12 col-sm-8">
                                                    <div class="book-card__info">
                                                        <p>Mã sách: {{masach}}</p>
                                                        <p>Tên sách: {{tensach}}</p>
                                                        <p>Tác giả: {{tacgia}}</p>
                                                        <p>Thể loại: {{theloai}}</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="row h-100">
                                                <div class="col-12 col-sm-7">
                                                    <div class="book-card__info">
                                                        <p>Năm xuất bản: {{namxuatban}} </p>
                                                        <p>Nhà xuất bản: {{nhaxuatban}}</p>
                                                        <p>Trị giá: {{trigia}} vnđ</p>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-sm-5 pr-0">
                                                    <div class="d-flex flex-column justify-content-arround book-card__action">
                                                        <div class="d-flex align-items-center justify-content-center justify-content-sm-start mb-3 mb-sm-0">
                                                            <img src="/images/librarian/lost-book.png" alt="">
                                                            <span>Mất sách</span>
                                                        </div>
                                                        <label class="my-checkbox-container">Trả sách
                                                            <input name="books[]" type="checkbox">
                                                            <span class="checkmark"></span>
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </form>
                    <div class="d-flex justify-content-around flex-row w-100">
                        <form  id="delete-borrow-book-form" style="display: none;"></form>
                        <button class="btn" type="submit" form="delete-borrow-book-form">
                            XÓA
                        </button>
                        <button class="btn" type="submit"  form="return-book-form">
                            LẬP PHIẾU TRẢ
                        </button>
                        <a href="/librarian/borrow-form/print">
                            <div class="d-flex align-items-center justify-content-center justify-content-sm-start mb-3 mb-sm-0">
                                <img src="/images/librarian/print-user.png" style="width: 30px;" alt="">
                                <span>In phiếu trả sách</span>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </main>
    {{/with}}